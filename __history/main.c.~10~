#include <16F877.h>
#device ADC=16

#FUSES NOWDT                    //No Watch Dog Timer
#FUSES NOBROWNOUT               //No brownout reset
#FUSES NOLVP                    //No low voltage prgming, B3(PIC16) or B5(PIC18) used for I/O

#use delay(crystal=4MHz)
#use STANDARD_IO( D )
#use FIXED_IO( B_outputs=PIN_B7,PIN_B6,PIN_B5,PIN_B4,PIN_B3,PIN_B2,PIN_B1,PIN_B0 )

#define use_portb_lcd TRUE
#include <lcd.c>

void tusGoster(){
      switch(input_D()){
            case 0b01111000: //0 olma durumu
               printf(lcd_putc,"%d",0);
               break;
            
            case 0b00101000: 
            printf(lcd_putc,"%d",1);
               break;
               //1 olma durumu
            
            case 0b01101000: //2
               printf(lcd_putc,"%d",2);
               break;
            case 0b10101000: //3
               printf(lcd_putc,"%d",3);
               break;
            
            case 0b00011000: // 4
               printf(lcd_putc,"%d",4);
               break;
            case 0b01011000: // 5
               printf(lcd_putc,"%d",5);
               break;
            case 0b10011000: //6
               printf(lcd_putc,"%d",6);
               break;
            case 0b00001000: //7 
               printf(lcd_putc,"%d",7);
               break;
           
            case 0b01001000: //8
               printf(lcd_putc,"%d",8);
               break;
            
            case 0b10001000://9
               printf(lcd_putc,"%d",9);
               break;
            
            case 0b11001000:// / operatoru
               printf(lcd_putc,"%c",'/');
               break;
            
            case 0b11011000:// * 
               printf(lcd_putc,"%c",'*');
               break;
             
            case 0b11101000:// -
               printf(lcd_putc,"%c",'-');
               break;
            case 0b11111000:// +
               printf(lcd_putc,"%c",'+');
               break;
            case 0b10111000: // = 
               printf(lcd_putc,"%c" , '=');
               break;
            
            case 0b00111000: // \f
               printf(lcd_putc,"%c",'\f');
               break;
            
           
         
   

}

void main()
{
   set_tris_d(0xff);
   set_tris_b(0x00);
   
   output_b(0x00);
   lcd_init();
   
   while(TRUE)
   {
      //TODO: User Code
     if(input(pin_D3) == 1){//D3 pini yanýyorsa kesinlikle bir butona basýlmýþtýr
         
         tusGoster();
         
         
         
         }
     
     }
   }

}
